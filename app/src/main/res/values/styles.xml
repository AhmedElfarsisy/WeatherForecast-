<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="weather_info_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="hourly_textView_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_18</item>
    </style>

    <style name="daily_item_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="home_header_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_24</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/txt_size_24</item>
    </style>
</resources>